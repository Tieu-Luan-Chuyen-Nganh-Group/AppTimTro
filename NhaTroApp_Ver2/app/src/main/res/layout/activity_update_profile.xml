<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ccffcc"
    tools:context=".UpdateProfileActivity">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/Update_img"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="36dp"
        android:src="@drawable/profile" />

    <ScrollView
        android:id="@+id/scroll_Info"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/Update_img">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingStart="15dp"
            android:paddingEnd="15dp">
            <EditText
                android:id="@+id/editText_Update_Username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginStart="0dp"
                android:layout_marginTop="25dp"
                android:background="@drawable/input"
                android:drawableLeft="@drawable/employee"
                android:drawablePadding="15dp"
                android:ems="10"
                android:hint="Username"
                android:inputType="textPersonName"
                android:padding="10dp" />

            <EditText
                android:id="@+id/editText_Update_Fullname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/editText_Update_Username"
                android:layout_alignParentStart="true"
                android:layout_marginStart="0dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/input"
                android:drawableLeft="@drawable/identification"
                android:drawablePadding="15dp"
                android:ems="10"
                android:hint="Fullname"
                android:inputType="textPersonName"
                android:padding="10dp" />

            <EditText
                android:id="@+id/editText_Update_Birthday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/editText_Update_Fullname"
                android:layout_alignParentStart="true"
                android:layout_marginStart="0dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/input"
                android:drawableLeft="@drawable/cake"
                android:drawablePadding="15dp"
                android:textSize="18sp"
                android:ems="10"
                android:hint="Birthday"
                android:inputType="textPersonName"
                android:padding="10dp" />
            <EditText
                android:id="@+id/editText_Update_Gender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/editText_Update_Birthday"
                android:layout_alignParentStart="true"
                android:layout_marginStart="0dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/input"
                android:drawableLeft="@drawable/sexual"
                android:drawablePadding="15dp"
                android:textSize="18sp"
                android:ems="10"
                android:hint="Gender"
                android:inputType="textPersonName"
                android:padding="10dp" />

            <EditText
                android:id="@+id/editText_Update_NumberPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/editText_Update_Gender"
                android:layout_alignParentStart="true"
                android:layout_marginStart="0dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/input"
                android:drawableLeft="@drawable/call"
                android:drawablePadding="15dp"
                android:textSize="18sp"
                android:ems="10"
                android:hint="Phone"
                android:inputType="phone"
                android:padding="10dp" />
            <EditText
                android:id="@+id/editText_Update_Address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/editText_Update_NumberPhone"
                android:layout_alignParentStart="true"
                android:layout_marginStart="0dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/input"
                android:drawableLeft="@drawable/address"
                android:drawablePadding="15dp"
                android:textSize="18sp"
                android:ems="10"
                android:hint="Address"
                android:inputType="text"
                android:padding="10dp" />

            <Button
                android:id="@+id/button_Update_Save"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/editText_Update_Address"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="22dp"
                android:layout_marginEnd="107dp"
                android:background="@drawable/button"
                android:text="Update"
                android:textAllCaps="false"
                android:textColor="@color/common_google_signin_btn_text_dark_default"
                android:textSize="20sp" />
        </RelativeLayout>

    </ScrollView>



</RelativeLayout>