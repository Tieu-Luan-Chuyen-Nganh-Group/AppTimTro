<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical"
        android:background="@drawable/post_boder">

        <EditText
            android:id="@+id/editText_RoomList_Address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="200dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/input"
            android:drawableLeft="@drawable/address"
            android:drawablePadding="15dp"
            android:ems="10"
            android:hint="Address"
            android:inputType="none"
            android:editable="false"
            android:padding="10dp" />

        <EditText
            android:id="@+id/editText_RoomList_Price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editText_AddRoom_Address"
            android:layout_alignParentStart="true"
            android:layout_marginStart="8dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/input"
            android:drawableLeft="@drawable/price"
            android:drawablePadding="15dp"
            android:ems="10"
            android:hint="Price"
            android:editable="false"
            android:inputType="none"
            android:padding="10dp" />

        <EditText
            android:id="@+id/editText_RoomList_Phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editText_AddRoom_Price"
            android:layout_alignParentStart="true"
            android:layout_marginStart="8dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/input"
            android:drawableLeft="@drawable/phone"
            android:drawablePadding="15dp"
            android:ems="10"
            android:hint="Phone"
            android:editable="false"
            android:inputType="none"
            android:padding="10dp" />

        <EditText
            android:id="@+id/editText_RoomList_Description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editText_AddRoom_Phone"
            android:layout_alignParentStart="true"
            android:layout_marginStart="8dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/input"
            android:drawableLeft="@drawable/description"
            android:drawablePadding="15dp"
            android:editable="false"
            android:ems="10"
            android:hint="Description"
            android:inputType="none"
            android:padding="10dp" />

        <LinearLayout
            android:id="@+id/layoutImg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="10dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/ImageView_Roomlist_Img1"
                    android:layout_width="160dp"
                    android:layout_height="160dp"
                    android:scaleType="centerCrop"
                    android:layout_marginLeft="8dp"
                    android:src="@drawable/logo"/>

                <ImageView
                    android:id="@+id/ImageView_Roomlist_Img2"
                    android:layout_width="160dp"
                    android:layout_height="160dp"
                    android:scaleType="centerCrop"
                    android:layout_marginLeft="8dp"
                    android:src="@drawable/logo" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/ImageView_Roomlist_Img3"
                    android:layout_width="160dp"
                    android:layout_height="160dp"
                    android:scaleType="centerCrop"
                    android:layout_marginLeft="8dp"
                    android:src="@drawable/logo"/>

                <ImageView
                    android:id="@+id/ImageView_Roomlist_Img4"
                    android:layout_width="160dp"
                    android:layout_height="160dp"
                    android:scaleType="centerCrop"
                    android:layout_marginLeft="8dp"
                    android:src="@drawable/logo" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>