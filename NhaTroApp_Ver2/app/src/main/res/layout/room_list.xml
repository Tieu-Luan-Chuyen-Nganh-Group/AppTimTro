<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical"
        android:background="@drawable/post_boder">

        <EditText
            android:id="@+id/editText_AddRoom_OrderNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="7dp"
            android:layout_marginEnd="7dp"
            android:layout_marginLeft="200dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/input"
            android:drawableLeft="@drawable/people"
            android:drawablePadding="15dp"
            android:ems="10"
            android:hint="Number"
            android:inputType="textPersonName"
            android:padding="10dp" />
        <EditText
            android:id="@+id/editText_AddRoom_Address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="7dp"
            android:layout_marginEnd="7dp"
            android:layout_marginLeft="200dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/input"
            android:drawableLeft="@drawable/address"
            android:drawablePadding="15dp"
            android:ems="10"
            android:hint="Address"
            android:inputType="textPersonName"
            android:padding="10dp" />

        <EditText
            android:id="@+id/editText_AddRoom_Price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editText_AddRoom_Address"
            android:layout_alignParentStart="true"
            android:layout_marginStart="7dp"
            android:layout_marginEnd="7dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/input"
            android:drawableLeft="@drawable/price"
            android:drawablePadding="15dp"
            android:ems="10"
            android:hint="Price"
            android:inputType="textPersonName"
            android:padding="10dp" />
        <EditText
            android:id="@+id/editText_AddRoom_Phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editText_AddRoom_Price"
            android:layout_alignParentStart="true"
            android:layout_marginStart="7dp"
            android:layout_marginEnd="7dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/input"
            android:drawableLeft="@drawable/phone"
            android:drawablePadding="15dp"
            android:ems="10"
            android:hint="Phone"
            android:inputType="textPersonName"
            android:padding="10dp" />

        <EditText
            android:id="@+id/editText_AddRoom_Description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editText_AddRoom_Phone"
            android:layout_alignParentStart="true"
            android:layout_marginStart="7dp"
            android:layout_marginEnd="7dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/input"
            android:drawableLeft="@drawable/description"
            android:drawablePadding="15dp"
            android:ems="10"
            android:hint="Description"
            android:inputType="textPersonName"
            android:padding="10dp" />

        <LinearLayout
            android:layout_marginStart="7dp"
            android:layout_marginEnd="7dp"
            android:id="@+id/AddRoom_layout"
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:layout_below="@+id/editText_AddRoom_Description"
            android:layout_alignParentStart="true"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="70dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/AddRoom_img_1"
                    android:scaleType="centerCrop"
                    android:src="@drawable/uploadimg"
                    android:layout_width="120dp"
                    android:layout_height="120dp" />
                <ImageView
                    android:id="@+id/AddRoom_img_2"
                    android:scaleType="centerCrop"
                    android:src="@drawable/uploadimg"
                    android:layout_width="120dp"
                    android:layout_height="120dp" />
                <ImageView
                    android:id="@+id/AddRoom_img_3"
                    android:scaleType="centerCrop"
                    android:src="@drawable/uploadimg"
                    android:layout_width="120dp"
                    android:layout_height="120dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="120dp">
                <ImageView
                    android:id="@+id/AddRoom_img_5"
                    android:scaleType="centerCrop"
                    android:src="@drawable/uploadimg"
                    android:layout_width="120dp"
                    android:layout_height="120dp" />
                <ImageView
                    android:id="@+id/AddRoom_img_4"
                    android:scaleType="centerCrop"
                    android:src="@drawable/uploadimg"
                    android:layout_width="120dp"
                    android:layout_height="120dp" />
                <ImageView
                    android:id="@+id/AddRoom_img_6"
                    android:scaleType="centerCrop"
                    android:src="@drawable/uploadimg"
                    android:layout_width="120dp"
                    android:layout_height="120dp" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>