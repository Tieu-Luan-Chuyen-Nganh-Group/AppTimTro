<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/admin_roomList_drawerLayout"
    android:layout_height="match_parent"
    tools:context=".RoomListActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <include
            android:id="@+id/admin_RoomList_page_toolbar"
            layout="@layout/app_bar_layout">
        </include>

        <FrameLayout
            android:id="@+id/admin_addNewRoom_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="0dp">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/all_rooms_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="55dp" />
        </FrameLayout>

        <ImageButton
            android:id="@+id/imgBtn_add_new_room"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="5dp"
            android:background="@color/colorPrimaryDark"
            android:baselineAlignBottom="false"
            android:focusableInTouchMode="false"
            android:scaleType="centerCrop"
            android:src="@drawable/add_room" />
    </RelativeLayout>


</androidx.drawerlayout.widget.DrawerLayout>